						a(href='#')
							span.fa.fa-file-text-o
						p.tag News
					li
						a(href='#')
							span.fa.fa-envelope-o
						p.tag Contact
			div.logoBox
				+companyIcon042115a
			section.socialIconsNav
				+iconLink042315a('fa-facebook','#','Facebook')
