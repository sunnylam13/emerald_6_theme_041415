	section.info
		.wrapper
			//- you will use ::before on the email, phone and address <p>
			section.aboutUs
				h2 About Us
				p.aboutSummary Emerald Six hands you cutting edge expertise in web development and direct response marketing that helps you maximize your bottom line.
				+linkTemplate042115a('hello@emeraldsix.com','mailto:hello@emeraldsix.com')
				.phone
					p P: 555-555-5555
				.address
					p 2 Bloor St West
					p Toronto, Ontario M9C 1X7

			section.usefulLinks
				h2 Useful Links
				//- flexbox will be used to wrap the items
				div
					ul.flex
						//- use ::before for the double chevron
						+linkTemplate033115a('Web Development','#')
						+linkTemplate033115a('About Emerald Six','#')
						+linkTemplate033115a('Mobile','#')
						+linkTemplate033115a('Why Emerald','#')
						+linkTemplate033115a('Direct Response Copywriting','#')
						+linkTemplate033115a('Social Media','#')
					ul.flex
						+linkTemplate033115a('Site Map','#')
						+linkTemplate033115a('Company','#')
						+linkTemplate033115a('Latest Jobs','#')
						+linkTemplate033115a('Partners','#')
						+linkTemplate033115a('Blog Posts','#')
						+linkTemplate033115a('Help Topics','#')
						+linkTemplate033115a('Policies','#')

			section.recentWork
				h2 Recent Work
				ul.portfolioThumbs
					+imgInsertTemplate('http://lorempixel.com/50/50','Portfolio Thumbnail Placeholder Image')
